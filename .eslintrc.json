{
    "env": {
        "node": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "comma-spacing": [
            2,
            {
            "before": false,
            "after": true
            }
        ],
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "space-unary-ops": [
            2
        ],
        "arrow-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": "always",
                "ObjectPattern": { "multiline": true },
                "ImportDeclaration": "never",
                "ExportDeclaration": { "multiline": true, "minProperties": 3 }
            }
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "multiline-ternary": [
            "error",
            "always-multiline"
        ],
        "key-spacing": [
            "error"
        ]
    }
}
